<resources>

    <!--Toolbar-->
    <style name="Widget.LandingTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/color_background</item>
        <item name="android:textColorPrimary">@color/color_on_background</item>
        <item name="colorControlNormal">@color/color_on_background</item>
    </style>

    <!--PopupMenu-->
    <style name="Widget.LandingTheme.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/color_surface</item>
    </style>

    <!--AlterDialog-->
    <style name="Components.LandingTheme.AlterDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="android:background">@color/color_surface</item>
    </style>

    <!--CardView-->
    <style name="Widget.LandingTheme.MainCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_main_card_border</item>
    </style>

    <style name="Widget.LandingTheme.ChoiceCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_choice_border</item>
    </style>

    <style name="Widget.LandingTheme.SuggestionCardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_suggestion_card_border</item>
        <item name="cardBackgroundColor">@color/color_surface</item>
    </style>

    <!--Launch-->
    <style name="LandingTheme.DayNight.Splash" parent="LandingTheme.DayNight">
        <item name="android:windowBackground">@drawable/landing_splash</item>
    </style>

</resources>
