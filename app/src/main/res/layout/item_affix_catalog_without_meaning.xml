<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_affix_catalog_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingBottom="8dp"
        android:drawableStart="@drawable/ic_affix_description_24dp"
        android:drawablePadding="4dp"
        android:textAppearance="@style/TextAppearance.LandingTheme.Body1"
        android:textColor="@color/color_header"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_affix_text"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:background="@color/color_surface"
        android:text="@string/affix_text"
        android:textAppearance="@style/TextAppearance.LandingTheme.Body2"
        android:textColor="@color/color_affix_form"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/div_top" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_affix_example"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/color_surface"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="@string/affix_example"
        android:textAppearance="@style/TextAppearance.LandingTheme.Body2"
        android:textColor="@color/color_affix_form"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_affix_text"
        app:layout_constraintTop_toBottomOf="@+id/div_top" />

    <View
        android:id="@+id/div_1"
        android:layout_width="1dp"
        android:layout_height="29dp"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toStartOf="@+id/item_affix_example"
        app:layout_constraintStart_toEndOf="@+id/item_affix_text"
        app:layout_constraintTop_toBottomOf="@+id/div_top" />

    <View
        android:id="@+id/div_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_affix_catalog_description" />

    <View
        android:id="@+id/div_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_affix_example" />

</androidx.constraintlayout.widget.ConstraintLayout>